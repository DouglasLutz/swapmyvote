.background-pattern.border-bottom
  .container
    %p.text-center
      Your preferred party is 
      %strong= @user.preferred_party.try(:name) || "?"
      but you are willing to vote for&nbsp;
      %strong> #{@user.willing_party.try(:name) || "?"}
      \. You are in&nbsp;
      %strong> #{@user.constituency.try(:name) || "?"}
      \.
    %p.small.text-center
      %a{href: edit_user_path} Not right? Update your info
      
.container.container-narrow
  - if @user.swap
    = render partial: "users/show/waiting_for_confirmation"
  - else
    = render partial: "users/show/searching_for_swap"